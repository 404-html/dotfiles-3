#!/usr/bin/env python3

import argparse
import datetime
import shutil
from os.path import expanduser

title = input("Name of Announcement?  ")
expire = input("When does announcement expire?  ")

slug = ("-".join(title.split()).lower())

# Creates file with Speaker Information 

target = open (slug + '.md', 'w')
target.write("---\n")
target.write("title: {}\n".format(title))
target.write("weight: 3\n")
target.write("expire: {}\n".format(expire))
target.write("---\n")
target.close()

print("Created file for " + title)
