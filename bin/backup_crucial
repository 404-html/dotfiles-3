##!/bin/bash
#Purpose = Backup of Important Data
#Created on 2017-01-05
#START
TIME=`date +%b-%d-%y`            # This Command will add date in Backup File Name.
FILENAME=sermons-$TIME.tar.gz    # Here i define Backup file name format.
SRCDIR=Markdown_Files # Location of Important Data Directory (Source of backup)
DESDIR=$HOME/Desktop            # Destination of backup file.
cd $HOME/Next/Administration
tar -cpzf $DESDIR/$FILENAME $SRCDIR/
s3cmd sync $DESDIR/$FILENAME s3://wade-crucial-backups/
#END!

