#!/bin/bash

if [ -f $HOME/.dmenurc ]; then
  . $HOME/.dmenurc
else
  DMENU='dmenu -i'
fi

PASSAGE=`cat /home/wadeallen/Dropbox/books.txt | $DMENU -p Scripture:\  $*`
PASSAGE=${PASSAGE// /+}

if [ -z "$PASSAGE" ]; then
  exit
else
  xdg-open "https://www.biblegateway.com/passage/?search=${PASSAGE}&version=NIV&interface=print"
fi


