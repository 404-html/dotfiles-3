rsync -av --delete ~/Music /run/media/wadeallen/Backup/
rsync -av --delete ~/Pictures /run/media/wadeallen/Backup/
rsync -av --delete ~/Videos /run/media/wadeallen/Backup/
rsync -av --delete --exclude '*/.git' ~/Sites /run/media/wadeallen/Backup/

