#!/usr/bin/env python3

with open('/home/wadeallen/Dropbox/Pandoc/Pandoc_Visitor/visitor.csv') as f:
    text = f.readlines()
    size = len(text)

total_count = size -1
mixed_zip = input('How many out of town Visitors? ')
muncie_zip = (int(total_count) - int(mixed_zip))
b2_postage = (int(mixed_zip) * 0.184)
b5_postage = (int(muncie_zip) * 0.133)
e5_total = b2_postage + b5_postage
total_weight = int(total_count) * .01
total_postage = str(round(e5_total, 2))

print('Total Visitors = ' + str(total_count))
print('B2 number of pieces = ' + str(mixed_zip))
print('B5 number of pieces = ' + str(muncie_zip))
print('B2 total postage = ' + str(b2_postage))
print('B5 total postage = ' + str(b5_postage))
print('Part E total = ' + str(e5_total))
print('Total Postage = ' + total_postage)
print('Total Weight = ' + str(total_weight))



