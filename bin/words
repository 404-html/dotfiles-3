#!/usr/bin/env python3

import inflect
p = inflect.engine()

noun = input("Noun: ")
verb = input("Verb: ")
number = int(input("Number of {}: ".format(p.plural(noun))))

print("There {0} {1} {2}. It is difficult to feed {1} {2} if you do not have an income. The {1} {2} {0} {3} very fast in the field.".format(p.plural_verb("was", number), p.number_to_words(number), p.plural_noun(noun,number), p.present_participle(verb)))
