#!/usr/bin/env python3

import argparse
import datetime
import shutil
from os.path import expanduser

name = input("Name of Event?  ")
date = input("Date of Event? (format 2017-06-01)   ")

merge = name.split()
slug = ("-".join(merge).lower())

# Creates file with Speaker Information 

target = open (date + '-' + slug + '.md', 'w')
target.write("---\n")
target.write("title: {}\n".format(name))
target.write("slug: {}\n".format(slug))
target.write("permalink: {}.html\n".format(slug))
target.write("layout: event\n")
target.write("---\n")
target.write("\n")
target.write("Description goes here")
target.write("\n")
target.close()

print("Created file for " + name)
