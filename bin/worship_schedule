#!/usr/bin/env python 

import frontmatter
import os
import glob
from datetime import date 
from dateutil.relativedelta import relativedelta 


today = date.today() 
# date = date.today().strftime("%Y-%m-%d")
next_month = today + relativedelta(months=1)
next_month_month = next_month.strftime("%m")
next_month_year = next_month.strftime("%Y")

path = ('/home/wadeallen/Next/Administration/Markdown_Files/Sermon_Work/' + next_month_year + '-' + next_month_month + '*.md')

files = glob.glob(path)
files = sorted(files)

for name in files:
	post = frontmatter.load(name)
	print ('- ' + post['date'][:-6] + ' - ' + post['title'] + ' (' + post['scripture'] + ')')


