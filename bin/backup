#! /bin/bash

cd ~
rsync -azv --delete  --exclude '*/.git' Sites $SHUTTLE:~/Backups/
echo "-------------"
echo "Completed Sites Backup"
echo "-------------"
rsync -azv --delete  --exclude '*/.git' bin $SHUTTLE:~/Backups/
echo "-------------"
echo "Completed Scripts Backup"
echo "-------------"
rsync -azv --delete  Dropbox $SHUTTLE:~/Backups/
echo "-------------"
echo "Completed Dropbox Backup"
echo "-------------"

