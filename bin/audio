#!/bin/bash

filename=$1
sunday=$(date +'%Y-%m-%d')
year=$(date +'%Y')


if	[ -z "$filename" ]
then
	echo "Please enter the file"
	exit 0
fi

source read_yaml
create_variables /home/wadeallen/Dropbox/Textbits/video-data.txt
echo $summary

fileroot=$(echo ${filename%.*})

ffmpeg -i ${filename} -i $HOME/Dropbox/Pictures/fbc_podcast_logo.png -b:a 192k -vn -metadata title="$title" -metadata genre="Spoken Word" -metadata album="First Baptist Church Muncie" -metadata album_artist="$author" -metadata date="${date}" -metadata artist="$author" -metadata comments="$summary" $HOME/Dropbox/Sermon_Audio/${sunday}.mp3 

mp3_filename=/home/wadeallen/Dropbox/Sermon_Audio/$sunday.mp3

duration=`exiftool -Duration $mp3_filename | awk '{ print $3 }'`
bytes=`wc -c $mp3_filename | awk '{ print $1 }'`

echo -e "layout: sermon\ncategory: video\nduration: '${duration}' \nlength: ${bytes}\nvideo_url: " > ~/Dropbox/Textbits/duration.txt

echo "copied duration data to Dropbox/Textbits/duration.txt file"
