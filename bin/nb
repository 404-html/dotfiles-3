#!/usr/bin/env python3

import datetime
from os.path import expanduser, isfile
import subprocess

home = expanduser("~")
today = datetime.datetime.now().strftime("%Y-%m-%d")
filename =(home + '/Next/Drafts/' + today + '.markdown')

if isfile(filename):
	subprocess.call(['vim', '-c', '9', filename])
else:	
	target = open (filename, 'w')
	target.write("---\nauthor: Wade Allen\ntitle: \ndate: {}\nlayout: blog\ncomments: yes\n---\n \n ".format(today))
	target.close()

	subprocess.call(['vim', '-c', '9', filename])
