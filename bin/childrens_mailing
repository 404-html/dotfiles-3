#!/bin/bash

filename=$1

if	[ -z "$filename" ]
then
	echo "Place MonthlyNewsletter.pdf in Children's News folder"
        echo "Then create new markdown file in Children's News folder (it can be blank file)"
        echo "Then run this command with new file as argument from the Children's News folder"
	exit 0
fi


fileroot=$(echo ${filename%.*})

pandoc $filename -o ~/Desktop/${fileroot}.pdf --template=mailing.tex
