#!/usr/bin/env python3

import argparse
import datetime
import shutil
from os.path import expanduser

speaker = input("Name of Speaker?  ")

slug = ("-".join(speaker.split()).lower())

# Creates file with Speaker Information 

target = open (slug + '.md', 'w')
target.write("---\n")
target.write("name: {}\n".format(speaker))
target.write("prefix: \n")
target.write("position: \n")
target.write("description: \n")
target.write("twitter: \n")
target.write("facebook: \n")
target.write("staff: false\n")
target.write("weight: 3\n")
target.write("---\n")
target.close()

print("Created file for " + speaker)
