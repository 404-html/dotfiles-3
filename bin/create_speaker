#!/usr/bin/env python3

import argparse
import datetime
import shutil
from os.path import expanduser

speaker = input("Name of Speaker?  ")

slug = ("-".join(speaker.split()).lower())

# Creates file with Speaker Information 

target = open (slug + '.md', 'w')
target.write("---\n")
target.write("title: {}\n".format(speaker))
target.write("slug: {}\n".format(slug))
target.write("permalink: {}.html\n".format(slug))
target.write("layout: speaker\n")
target.write("---\n")
target.write("\n")
target.write("Description goes here")
target.write("\n")
target.close()

print("Created file for " + speaker)
