#!/usr/bin/env python3

from pick import pick
import os

title = 'What event would you like to plan: '
options = ['Baptism', 'Baby Dedication', 'Wedding', 'Funeral', 'Quit']
option, index = pick(options, title)

if index == 4:
	print('')
elif index == 0:
	os.system('python3 /home/wadeallen/bin/todoist_baptism.py')
elif index == 1:
	os.system('python3 /home/wadeallen/bin/todoist_baby.py')
elif index == 2:
	print('Need to add wedding script here. It does not do anything yet')
else:
	os.system('python3 /home/wadeallen/bin/funeral')

    
