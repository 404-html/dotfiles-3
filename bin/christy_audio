#!/bin/bash

filename=$1

if	[ -z "$filename" ]
then
	echo "Please enter the file"
	exit 0
fi

echo "Title of Song"
read title

echo "Name of Album"
read album

echo "Name of Artist"
read artist

fileroot=$(echo ${filename%.*})

ffmpeg -i ${filename} -b:a 192K -vn -metadata title="${title}" -metadata album="${album}" -metadata album_artist="${artist}" -metadata artist="${artist}" ${fileroot}.mp3 
